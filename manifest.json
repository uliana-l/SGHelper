{
  "name": "VFX coordinating extension",
  "description": "This extension will copy.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "128": "images/logo.png"
  },
  "action": {
    "default_icon": "images/logo.png",
    "default_title": "Click to copy items to clipboard"
  },
  "permissions": ["activeTab", "scripting", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["file:///*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}